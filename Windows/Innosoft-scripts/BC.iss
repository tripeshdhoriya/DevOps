[Files]
Source: "D:\setups\BlueCardinal\*"; DestDir: "{app}"; Flags: ignoreversion recursesubdirs createallsubdirs
; NOTE: Don't use "Flags: ignoreversion" on any shared system files

[Run]
Filename: {sys}\sc.exe; Parameters: "stop BLUECARDINAL" ; Flags: runhidden
Filename: "{app}\install-64bit.bat"; Flags: runhidden
Filename: "{app}\generate-keycode.bat"; Flags: nowait runhidden postinstall

[UninstallRun]
Filename: {sys}\sc.exe; Parameters: "stop BLUECARDINAL" ; Flags: runhidden
Filename: {sys}\sc.exe; Parameters: "delete BLUECARDINAL" ; Flags: runhidden